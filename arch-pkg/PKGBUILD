# Maintainer: David Bernhard <dbernhard@ethz.ch>
pkgname=simple-reconnect-daemon
pkgver=0.0.1
pkgrel=1
pkgdesc="Simple Reconnect Daemon"
arch=(x86_64)
url="https://n.ethz.ch/~dbernhard"
license=('GPL2')
groups=()
depends=(systemd libconfig)
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=('etc/srd/srd.conf')
options=('!strip')
install=
changelog=
source=('srd.conf')
noextract=()
sha256sums=('42a8bb596fa16ae938afdd1ce8e4d472481e6e1d71cf8899994cb9768b3de3ed')
validpgpkeys=()


prepare() {
    cp ../../srd.c .
    cp ../../srd.h .
    cp ../../srd.service .
    cp ../../Makefile .
}

build() {
    make
}

package() {
    install -Dm755 ./srd "${pkgdir}/usr/bin/srd"

    install -Dm644 ./srd.conf "${pkgdir}/etc/srd/srd.conf"
    install -Dm644 ./srd.service "${pkgdir}/usr/lib/systemd/system/srd.service"
}
